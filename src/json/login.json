{
  "title": "Login to your account",
  "components": [
    {
      "type": "form",
      "shards": [
        {
          "type": "text",
          "key-type": "phone-pad",
          "title": "Phone Number",
          "text": "Type your phone number here",
          "function": "onChange",
          "id": "login-phone",
          "secure": false
        },
        {
          "type": "text",
          "title": "Password",
          "text": "Type your password here",
          "function": "onChange",
          "id": "login-pass",
          "secure": true
        },
        {
          "type": "button",
          "text": "Submit",
          "color": "white",
          "accessibility": "Submit your details",
          "function": "submitLogin"
        },
        {
          "type": "link",
          "to": "Register",
          "text": "New user?"
        }
      ]
    }
  ]
}
